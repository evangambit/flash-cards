{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2020",
    "lib": ["ES2020", "ES2021.WeakRef", "DOM"],
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "frontend/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
//  'es2020', 'es2022', 'esnext', 'system', 'node16', or 'nodenext'.